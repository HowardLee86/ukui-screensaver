/* devices' widget */
QComboBox{
    border: 1px solid white;
    background: rgba(0, 0, 0, 20);
    font:18px;
    color:white;
    height: 50px;
}
QComboBox QAbstractItemView{
    border: 1px solid white;
    outline: 0px;
    height: 100px;
    background: rgb(1, 58, 80);
    font: 22px;
    color: white;
}
QComboBox QAbstractItemView::item:selected{
    background-color: rgba(54, 98, 180);
}
QComboBox::down-arrow{
    image:url(:/images/images/arrow_down.svg);
}
QComboBox::drop-down{
    width: 30px;
    border: none;
}
